    "mapRoot": "./src/",
    "module": "NodeNext",
    "noImplicitAny": true,
    "outDir": "./build/",
    "allowSyntheticDefaultImports": true,
    "preserveConstEnums": true,
    "removeComments": true,
    "rootDir": "./src/",
    "sourceMap": true,
    "sourceRoot": "./src/",
    "target": "es2020",
  }
}
